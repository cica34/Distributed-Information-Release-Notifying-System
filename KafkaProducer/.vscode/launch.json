        },
        {
            "type": "java",
            "name": "ProducerApplication",
            "request": "launch",
            "mainClass": "com.mikrosoft.producer.ProducerApplication",
            "projectName": "producer",
            "args": [
                "--master",
                "your-master-url"
            ],
            "vmArgs": [
                "--add-opens=java.base/jdk.internal.ref=ALL-UNNAMED",
